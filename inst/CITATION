citHeader("To cite sfa in publications use:")

bibentry(bibtype = "Article",
         title = "Stochastic Frontier Analysis: The sfa Package",
         author = c(person("David H. Bernstein"),
                             person("Christopher F. Parmeter"),
                             person("Alexander D. Stead")),
         journal      = "Working Paper",
         year         = "2026",
         
         textVersion = 
         paste("David H. Bernstein, Christopher F. Parmeter, and Alexander D Stead (2026).", 
               "Stochastic Froniter Analysis: The sfa Package.",
               "Working Paper.")
)

